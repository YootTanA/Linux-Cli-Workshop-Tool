#!/bin/bash

# Default ENV settings
TARGET_DIR=/home
QUEST_NAME=$1

for dir in $TARGET_DIR/*; do 
   target_quest=$dir/quest/$QUEST_NAME/

   if [ -d "$dir" ]; then
     user=$(basename "$dir")
   else
     break
   fi

   ./quest-solution/$QUEST_NAME/test-suite > ./quest-report/$user/$QUEST_NAME
done
